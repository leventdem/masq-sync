{
  "name": "masq-sync",
  "version": "1.0.0",
  "description": "Sync client for Masq",
  "main": "src/index.js",
  "author": {
    "name": "Andrei Sambra",
    "email": "a.sambra@qwant.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/QwantResearch/masq-sync.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm dist/index.js dist/utils.js",
    "test": "npm run build && jest --verbose --coverage --forceExit && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "watch": "jest --watch",
    "build": "./node_modules/.bin/babel ./src --experimental -d ./dist && browserify ./dist/index.js --standalone MasqSync > dist/masqsync.js && npm run clean",
    "minify": "npm run build && uglifyjs ./dist/masqsync.js -o ./dist/masqsync.min.js --compress --mangle -- ",
    "dist": "npm run minify",
    "start": "npm run dist && http-server -p 8888 dist/."
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browserify": "^14.5.0",
    "coveralls": "^3.0.0",
    "http-server": "^0.10.0",
    "jest": "^22.3.0",
    "socketcluster-server": "^10.0.1",
    "uglify-js": "^3.1.10"
  },
  "dependencies": {
    "sc-codec-min-bin": "^3.0.0",
    "socketcluster-client": "^10.1.1"
  }
}
